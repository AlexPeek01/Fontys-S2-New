@model RegisterModel
@{
    ViewData["Title"] = "User Registration";
    Layout = null;
}
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" type="text/css" href="~/css/Login/util.css">
<link rel="stylesheet" type="text/css" href="~/css/Login/main.css">
<link href="~/css/Login/register.css" rel="stylesheet" />
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form method="post" asp-action="Register" asp-controller="Account" class="login100-form validate-form flex-sb flex-w">
                <span class="login100-form-title p-b-32">
                    Registration
                </span>
                <span class="txt1 p-b-11" asp-validation-for="Username">
                    Username
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="Username is required">
                    <input asp-for="Username" class="input100" type="text" name="username">
                    <span class="focus-input100"></span>
                </div>
                <span class="txt1 p-b-11" asp-validation-for="Email">
                    E-mail
                </span>
                <div class="wrap-input100 validate-input m-b-36" data-validate="E-mail is required">
                    <input asp-for="Email" class="input100" type="text" name="email">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11" asp-validation-for="Password">
                    Password
                </span>
                <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    <input asp-for="Password" class="input100" type="password">
                    <span class="focus-input100"></span>
                </div>
                <span class="txt1 p-b-11" asp-validation-for="ConfirmPassword">
                    Confirm password
                </span>
                <div class="wrap-input100 validate-input m-b-12" data-validate="Password is required">
                    <span class="btn-show-pass">
                        <i class="fa fa-eye"></i>
                    </span>
                    <input asp-for="ConfirmPassword" class="input100" type="password">
                    <span class="focus-input100"></span>
                </div>


                <div class="container-login100-form-btn">
                    <button type="submit" formmethod="post" class="login100-form-btn">
                        Confirm
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>